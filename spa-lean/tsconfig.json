{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false
  },
  "include": [
    "src",
    "../shared/**/*.ts"          // <— only .ts from shared
  ],
  "exclude": [
    "../shared/**/*.tsx",        // <— exclude shared JSX
    "../shared/schema.ts",       // backend-only
    "../server/**",
    "node_modules"
  ]
}
